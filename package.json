{
  "name": "zeroerp",
  "version": "1.0.0",
  "description": "Lightweight browser-based ERP system for small business operations",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "node server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "fly": "node scripts/fly-api.js",
    "fly:status": "node scripts/fly-api.js status",
    "fly:secrets": "node scripts/fly-api.js secrets",
    "fly:machines": "node scripts/fly-api.js machines"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.11.0",
    "@sentry/browser": "^10.32.1",
    "@sentry/node": "^10.32.1",
    "@sentry/react": "^10.32.1",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inngest": "^3.48.1",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.460.0",
    "posthog-js": "^1.310.2",
    "posthog-node": "^5.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7",
    "stripe": "^14.7.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.10",
    "vitest": "^1.3.1"
  }
}
